ishikopath = envvar("ISHIKO_CPP_ROOT");
import $(ishikopath)/test-framework/include/Ishiko/TestFramework.bkl;

toolsets = gnu vs2022 vs2019 vs2017 vs2015;

gnu.makefile = ../gnumake/GNUmakefile;
vs2022.solutionfile = ../vc17/CodeSmithyCLITests.sln;
vs2019.solutionfile = ../vc16/CodeSmithyCLITests.sln;
vs2017.solutionfile = ../vc15/CodeSmithyCLITests.sln;
vs2015.solutionfile = ../vc14/CodeSmithyCLITests.sln;

program CodeSmithyCLITests : IshikoTestFramework
{
    if ($(toolset) == gnu)
    {
        cxx-compiler-options = "-std=c++11";
        libs += IshikoTestFramework IshikoTestFrameworkCore IshikoConfiguration IshikoDiff IshikoXML IshikoFileSystem IshikoIO IshikoProcess IshikoTime IshikoText IshikoErrors IshikoBasePlatform;
        libs += fmt boost_filesystem;
    }

    if ($(toolset) != gnu)
    {
        archs = x86 x86_64;
    }

    headers
    {
        ../../src/BootstrapTests.h
        ../../src/ProjectCommandTests.hpp
        ../../src/VisualStudioBuildTests/VisualStudioBuildTests.h
    }

    sources
    {
        ../../src/BootstrapTests.cpp
        ../../src/main.cpp
        ../../src/ProjectCommandTests.cpp
        ../../src/VisualStudioBuildTests/VisualStudioBuildTests.cpp
    }
}
